# LandVista example environment variables
# Copy this file to .env and replace placeholder values before running.

# MongoDB
MONGO_URI=your_mongodb_connection_string

# Flask
SECRET_KEY=change-me-to-a-random-secret

# Email / SMTP
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your.email@gmail.com
MAIL_PASSWORD=your_16_char_app_password_here
MAIL_DEFAULT_SENDER=LandVista <noreply@landvista.com>
ADMIN_EMAIL=admin@landvista.com

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxx
# Optional: if omitted, callback defaults to /admin/payments
PAYSTACK_CALLBACK_URL=
# Optional: keep default unless you are using a proxy or custom endpoint
PAYSTACK_BASE_URL=https://api.paystack.co
